{
  "description": "Weather button displays temperature for selected city. Weather information is received from OpenWeatherMap.org",
  "manifest_version": 2,
  "name": "Weather Button",
  "version": "0.1",
  "homepage_url": "https://test.com",
  "icons": {
    "32": "icons/1.svg"
  },

  "permissions": [    
	"http://api.openweathermap.org/*",	
	"alarms",
	"storage"	
  ],  

  "browser_action": {
    "default_icon": {
			"128": "icons/1.svg"
	},
    "default_title": "Weather Button",
	"browser_style": true,
	"default_popup": "popup/current_weather.html"
  },
  
  "background": {
  "scripts": ["background-script.js"]
  },
  
  "options_ui": {
    "page": "options.html"
  }
  
}
